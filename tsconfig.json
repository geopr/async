{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "module": "esnext",
    "outDir": "dist",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*/spec.ts", "dist"],
}
